{
  "compilerOptions": {
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es2015",
    "lib": [  "es2015", "dom"],
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "coverage",
    "jest-stare"
  ]
}
